{
   "name": "munchy",
   "private": true,
   "type": "module",
   "packageManager": "bun@1.0.26",
   "workspaces": [
      "apps/*"
   ],
   "scripts": {
      "dev": "turbo dev",
      "build": "turbo build",
      "start": "turbo start",
      "format-and-lint": "turbo format-and-lint",
      "format-and-lint:fix": "turbo format-and-lint:fix",
      "db:generate": "turbo db:generate",
      "db:migrate": "turbo db:migrate",
      "db:push": "turbo db:push",
      "db:up": "docker compose up -d",
      "db:down": "docker compose down -v",
      "db:studio": "turbo db:studio",
      "db:seed": "turbo db:seed",
      "ui": "bunx --bun shadcn@latest",
      "auth": "bunx --bun @better-auth/cli@latest",
      "auth:generate": "bunx @better-auth/cli@latest generate --y --output ./lib/server/schema/auth.schema.ts && bunx biome format --write ./lib/server/schema/auth.schema.ts"
   },
   "devDependencies": {
      "@biomejs/biome": "1.9.4",
      "turbo": "latest"
   },
   "trustedDependencies": ["@biomejs/biome", "@parcel/watcher"]
}
