{
   "compilerOptions": {
      "incremental": true,
      "target": "ESNext",

      "jsx": "react-jsx",
      /* Bundled projects */
      "lib": ["esnext", "dom", "dom.iterable"],
      "moduleDetection": "force",

      /* Path Aliases */
      "baseUrl": ".",
      "module": "preserve",
      "paths": {
         "~/*": ["./*"]
      },
      "resolveJsonModule": true,
      "allowJs": true,

      "checkJs": true,
      /* Strictness */
      "strict": true,
      "noImplicitOverride": true,
      "noUncheckedIndexedAccess": true,
      "noEmit": true,
      /* Base Options: */
      "esModuleInterop": true,
      "isolatedModules": true,
      "verbatimModuleSyntax": true,
      "skipLibCheck": true
   },
   "include": ["**/*.ts", "**/*.tsx", "**/*.js"],

   "exclude": ["node_modules"]
}
