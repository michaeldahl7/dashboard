{
   "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
   "files": {
      "ignore": [
         "app/routeTree.gen.ts",
         "node_modules/**/*",
         ".turbo/**/*",
         "**/dist/**/*"
      ]
   },
   "organizeImports": {
      "enabled": true
   },
   "linter": {
      "enabled": true,
      "rules": {
         "recommended": true,
         "style": {
            "noNonNullAssertion": "off"
         },
         "suspicious": {
            "noExplicitAny": "off"
         }
      }
   },
   "formatter": {
      "enabled": true,
      "ignore": [],
      "indentStyle": "space",
      "indentWidth": 3,
      "lineWidth": 90,
      "lineEnding": "lf"
   },
   "json": {
      "parser": {
         "allowComments": false
      }
   }
}
