{
   "$schema": "https://turbo.build/schema.json",
   "globalEnv": [
      "BETTER_AUTH_SECRET",
      "DATABASE_URL",
      "APP_BASE_URL",
      "DISCORD_CLIENT_ID",
      "DISCORD_CLIENT_SECRET",
      "GITHUB_CLIENT_ID",
      "GITHUB_CLIENT_SECRET",
      "GOOGLE_CLIENT_ID",
      "GOOGLE_CLIENT_SECRET"
   ],
   "tasks": {
      "build": {
         "dependsOn": ["^build"],
         "outputs": [".output/**", "dist/**", "build/**"]
      },
      "dev": {
         "cache": false,
         "persistent": true,
         "env": [
            "VITE_APP_BASE_URL",
            "BETTER_AUTH_SECRET",
            "DATABASE_URL",
            "APP_BASE_URL",
            "DISCORD_CLIENT_ID",
            "DISCORD_CLIENT_SECRET",
            "GITHUB_CLIENT_ID",
            "GITHUB_CLIENT_SECRET",
            "GOOGLE_CLIENT_ID",
            "GOOGLE_CLIENT_SECRET"
         ]
      },
      "format-and-lint": {},
      "format-and-lint:fix": {},
      "db:generate": {
         "cache": false
      },
      "db:migrate": {
         "cache": false
      },
      "db:push": {
         "cache": false
      },
      "db:studio": {
         "cache": false
      },
      "db:seed": {
         "cache": false
      }
   }
}
