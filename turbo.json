{
   "$schema": "https://turbo.build/schema.json",
   "globalDependencies": ["**/.env"],
   "tasks": {
      "build": {
         "dependsOn": ["^build"],
         "outputs": [".output/**", "dist/**", "build/**"]
      },
      "dev": {
         "cache": false,
         "persistent": true
      },
      "format-and-lint": {},
      "format-and-lint:fix": {},
      "db:generate": {
         "cache": false
      },
      "db:migrate": {
         "cache": false
      },
      "db:push": {
         "cache": false
      },
      "db:studio": {
         "cache": false
      },
      "db:seed": {
         "cache": false
      }
   }
} 